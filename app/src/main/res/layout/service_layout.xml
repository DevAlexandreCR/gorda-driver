<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded_background"
    android:elevation="12dp">

    <!-- Enhanced Slide Handle Indicator -->
    <View
        android:id="@+id/slideHandle"
        android:layout_width="50dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        android:background="@color/secondary"
        android:alpha="0.8"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Enhanced Collapsed State Header - Always Visible -->
    <LinearLayout
        android:id="@+id/collapsedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideHandle">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_person_pin_24"
            android:contentDescription="@string/fields_name"
            app:tint="@color/secondary"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/current_address_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.75"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/current_destination_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.75"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

    </LinearLayout>

    <!-- Enhanced Expandable Content - Service Details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expandableContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/collapsedHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Contact Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_phone"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/current_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:drawablePadding="8dp"
                        android:linksClickable="false"
                        android:singleLine="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/ic_call_24" />

                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <!-- Route Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/route_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/primary_dark"
                        app:cardCornerRadius="12dp"
                        app:strokeColor="@color/secondary"
                        app:strokeWidth="0.5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_location_24"
                                    android:contentDescription="@string/service_address"
                                    app:tint="@color/secondary" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/textView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/service_address"
                                        android:textColor="@color/secondary"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.04" />

                                    <TextView
                                        android:id="@+id/current_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:lineSpacingExtra="2dp"
                                        android:maxLines="2"
                                        android:ellipsize="end" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/destination_divider"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginVertical="6dp"
                                android:alpha="0.5"
                                android:background="@color/secondary" />

                            <LinearLayout
                                android:id="@+id/destination_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_location_24"
                                    android:contentDescription="@string/service_destination"
                                    app:tint="@android:color/white" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/textViewDestination"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/service_destination"
                                        android:textColor="@android:color/white"
                                        android:textSize="11sp"
                                        android:textStyle="bold"
                                        android:letterSpacing="0.04" />

                                    <TextView
                                        android:id="@+id/current_destination"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:lineSpacingExtra="2dp"
                                        android:maxLines="2"
                                        android:ellipsize="end" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Comment Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_comment"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/service_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Enhanced Navigation Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/primary_dark"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_24"
                    android:contentDescription="@string/navigation"
                    app:tint="@color/secondary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/navigation"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Enhanced Navigation Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/img_btn_maps"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/map"
                        android:background="@color/fui_transparent"
                        android:src="@drawable/maps"
                        android:scaleType="centerInside"
                        android:padding="0dp"
                        android:elevation="4dp" />

                    <ImageButton
                        android:id="@+id/img_btn_waze"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:contentDescription="@string/navigation"
                        android:background="@color/fui_transparent"
                        android:src="@drawable/waze"
                        android:scaleType="centerInside"
                        android:padding="0dp"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>