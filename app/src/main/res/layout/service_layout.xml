<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:elevation="12dp">

    <!-- Enhanced Slide Handle Indicator -->
    <View
        android:id="@+id/slideHandle"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginTop="12dp"
        android:background="@color/secondary"
        android:alpha="0.8"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Enhanced Collapsed State Header - Always Visible -->
    <LinearLayout
        android:id="@+id/collapsedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideHandle">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_person_pin_24"
            android:contentDescription="@string/fields_name"
            app:tint="@color/secondary"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/current_address_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.75"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Enhanced Expandable Content - Service Details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expandableContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/collapsedHeader"
        app:layout_constraintBottom_toTopOf="@+id/btn_service_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/primary"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Contact Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/secondary"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_phone"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/current_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:drawablePadding="8dp"
                        android:linksClickable="false"
                        android:singleLine="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/ic_call_24" />

                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:background="@color/primary_dark"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_address"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/current_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:drawablePadding="8dp"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- Comment Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:background="@color/secondary"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/service_comment"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:alpha="0.9" />

                    <TextView
                        android:id="@+id/service_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Enhanced Navigation Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/primary_dark"
                android:paddingHorizontal="16dp"
                android:paddingVertical="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_24"
                    android:contentDescription="@string/navigation"
                    app:tint="@color/secondary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/navigation"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Enhanced Navigation Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/img_btn_maps"
                        style="@style/Widget.Material3.Button.UnelevatedButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/map"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="@color/secondary"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/maps"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="@android:color/white"
                        android:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/img_btn_waze"
                        style="@style/Widget.Material3.Button.UnelevatedButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:contentDescription="@string/navigation"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:backgroundTint="@color/secondary"
                        app:cornerRadius="16dp"
                        app:icon="@drawable/waze"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="28dp"
                        app:iconTint="@android:color/white"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <!-- Enhanced Primary Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_service_status"
        style="@style/Widget.Material3.Button.UnelevatedButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/service_have_arrived"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/secondary"
        android:textColor="@android:color/white"
        app:cornerRadius="20dp"
        app:icon="@drawable/add_24"
        app:iconGravity="textStart"
        app:iconSize="24dp"
        app:iconTint="@android:color/white"
        android:elevation="8dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>